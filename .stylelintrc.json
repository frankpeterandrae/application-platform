{
	"ignoreFiles": ["**/*"],
	"overrides": [
		{
			"files": ["**/*.css"],
			"extends": ["stylelint-config-standard"],
			"rules": {}
		},
		{
			"files": ["**/*.scss"],
			"extends": ["stylelint-config-standard-scss"],
			"rules": {}
		}
	],
	"rules": {
		"selector-pseudo-element-no-unknown": [true, { "ignorePseudoElements": ["ng-deep"] }]
	}
}
