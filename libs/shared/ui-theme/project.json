{
	"name": "shared-ui-theme",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/shared/ui-theme/src",
	"prefix": "theme",
	"projectType": "library",
	"tags": ["type:ui", "scope:shared", "platform:browser"],
	"targets": {
		"test": {
			"executor": "@nx/jest:jest",
			"options": {
				"jestConfig": "libs/shared/ui-theme/jest.config.ts",
				"tsConfig": "libs/shared/ui-theme/tsconfig.spec.json"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"watch-css": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npm run watch:shared-styles",
				"cwd": "libs/shared/ui-theme",
				"parallel": false
			}
		},
		"stylelint": {
			"executor": "nx-stylelint:lint"
		}
	}
}
