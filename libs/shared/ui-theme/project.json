{
	"name": "shared-ui-theme",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/shared/ui-theme/src",
	"prefix": "theme",
	"projectType": "library",
	"tags": ["type:ui", "scope:shared", "platform:browser"],
	"metadata": {
		"assets": [
			{
				"glob": "**/*",
				"input": "{projectRoot}/src/assets",
				"output": "assets"
			}
		]
	},
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"options": {
				"tsConfig": "libs/shared/ui-theme/tsconfig.spec.json",
				"vitestConfig": "libs/shared/ui-theme/vitest.config.mts",
				"reportsDirectory": "../../../coverage/libs/shared/ui-theme",
				"passWithNoTests": true
			},
			"outputs": ["{options.reportsDirectory}"],
			"dependsOn": ["typecheck-test", "typecheck-lib"]
		},
		"watch-css": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npm run watch:shared-styles",
				"cwd": "scripts",
				"parallel": false
			}
		},
		"stylelint": {
			"executor": "nx-stylelint:lint"
		},
		"typecheck-test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx tsc -p {projectRoot}/tsconfig.spec.json --noEmit"
			}
		},
		"typecheck-lib": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx tsc -p {projectRoot}/tsconfig.lib.json --noEmit"
			}
		}
	}
}
