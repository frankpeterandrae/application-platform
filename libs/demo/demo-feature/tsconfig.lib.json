{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../../dist/out-tsc",
		"declaration": false,
		"declarationMap": false,
		"inlineSources": true,
		"types": []
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.mts",
		"src/test-setup.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
