{
	"name": "@application-platform/source",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"nx": "nx",
		"start": "nx run homepage:serve",
		"serve": "nx run-many -t serve --projects=homepage,demo --parallel=2",
		"serve:homepage": "nx run homepage:serve",
		"serve:demo": "nx run demo:serve",
		"build": "nx run-many -t build --all",
		"build:homepage": "nx run homepage:build",
		"build:demo": "nx run demo:build",
		"lint": "nx run-many -t lint --all",
		"lint:fix": "nx run-many -t lint --all --fix",
		"lint:staged": "nx affected -t lint --fix --files",
		"test": "nx run-many -t test --all",
		"test:no-cache": "nx run-many -t test --all --skip-nx-cache",
		"e2e": "nx run-many -t e2e --all --skip-nx-cache",
		"format": "prettier --config .prettierrc --log-level warn \"**/*.{ts,mts,js,json,scss,html,mjs}\" --ignore-path .gitignore",
		"format:check": "npm run format -- --check",
		"format:fix": "npm run format -- --write",
		"graph": "nx graph",
		"dep-graph": "nx dep-graph",
		"reset": "nx reset",
		"clean": "npm run reset && rimraf dist coverage tmp .angular",
		"update": "nx migrate latest",
		"help": "nx help",
		"prepare": "husky",
		"watch:shared-styles": "node scripts/watch-css.js",
		"serve:watch": "concurrently \"nx run start\" \"nx run shared-ui-theme:watch-css\"",
		"countlines": "cloc . --exclude-dir=.angular,.husky,.idea,.nx,.vscode,dist,node_modules,tmp,coverage --exclude-list-file=package-lock.json",
		"foss": "license-checker --json --production --customPath licenseFormat.json --out tmp/foss-licenses.json && node ./scripts/combine-licenses.js",
		"release": "node tools/release.mjs"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "21.1.3",
		"@angular/cdk": "21.1.3",
		"@angular/common": "21.1.3",
		"@angular/compiler": "21.1.3",
		"@angular/core": "21.1.3",
		"@angular/forms": "21.1.3",
		"@angular/platform-browser": "21.1.3",
		"@angular/platform-browser-dynamic": "21.1.3",
		"@angular/router": "21.1.3",
		"@jsverse/transloco": "^8.2.1",
		"@nx/angular": "22.5.0",
		"@push-based/ngx-fast-svg": "^18.1.0",
		"axios": "^1.13.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-unused-imports": "^4.4.1",
		"npm-check-updates": "^19.3.2",
		"organize-imports-cli": "^0.10.0",
		"prismjs": "^1.30.0",
		"rxjs": "~7.8.2",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "^2.2.3",
		"@angular-devkit/build-angular": "21.1.3",
		"@angular-devkit/core": "21.1.3",
		"@angular-devkit/schematics": "21.1.3",
		"@angular-eslint/eslint-plugin": "21.2.0",
		"@angular-eslint/eslint-plugin-template": "21.2.0",
		"@angular-eslint/schematics": "21.2.0",
		"@angular-eslint/template-parser": "21.2.0",
		"@angular/build": "21.1.3",
		"@angular/cli": "21.1.3",
		"@angular/compiler-cli": "21.1.3",
		"@angular/language-service": "21.1.3",
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.19.0",
		"@nx/devkit": "22.5.0",
		"@nx/esbuild": "22.5.0",
		"@nx/eslint": "22.5.0",
		"@nx/eslint-plugin": "22.5.0",
		"@nx/jest": "22.5.0",
		"@nx/js": "22.5.0",
		"@nx/node": "22.5.0",
		"@nx/playwright": "22.5.0",
		"@nx/vite": "22.5.0",
		"@nx/vitest": "22.5.0",
		"@nx/web": "22.5.0",
		"@nx/workspace": "22.5.0",
		"@playwright/test": "^1.58.2",
		"@prettier/plugin-php": "^0.24.0",
		"@swc-node/register": "1.11.1",
		"@swc/core": "1.15.8",
		"@swc/helpers": "0.5.18",
		"@types/jest": "^30.0.0",
		"@types/node": "25.2.3",
		"@types/prismjs": "^1.26.5",
		"@typescript-eslint/eslint-plugin": "8.55.0",
		"@typescript-eslint/parser": "8.55.0",
		"@typescript-eslint/utils": "8.55.0",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"angular-eslint": "21.2.0",
		"concurrently": "^9.2.1",
		"esbuild": "0.27.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "10.1.8",
		"eslint-formatter-unix": "^9.0.1",
		"eslint-plugin-cypress": "^5.3.0",
		"eslint-plugin-jsdoc": "^62.5.4",
		"eslint-plugin-playwright": "^2.5.1",
		"husky": "^9.1.7",
		"jsdom": "^28.0.0",
		"jsonc-eslint-parser": "^2.4.2",
		"license-checker": "^25.0.1",
		"lint-staged": "^16.2.7",
		"nx": "22.5.0",
		"nx-stylelint": "^18.0.2",
		"prettier": "~3.8.1",
		"rimraf": "^6.1.2",
		"sass": "^1.97.3",
		"sass-migrator": "2.5.7",
		"shx": "^0.4.0",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "39.0.1",
		"stylelint-config-standard-scss": "16.0.0",
		"ts-node": "10.9.2",
		"typescript": "5.9.3",
		"typescript-eslint": "8.55.0",
		"vite": "^7.3.1",
		"vite-plugin-angular": "^0.0.0",
		"vite-tsconfig-paths": "^6.1.0",
		"vitest": "^4.0.18"
	},
	"lint-staged": {
		"*.{css,scss}": [
			"stylelint --fix",
			"prettier --config .prettierrc --write"
		],
		"*.{js,jsx,ts}": [
			"organize-imports-cli",
			"node scripts/sort-exports.js",
			"node scripts/build-translation-files.js",
			"npm run lint:staged --silent",
			"prettier --config .prettierrc --write"
		],
		"*.{md,json,html,php}": [
			"prettier --config .prettierrc --write"
		]
	}
}
