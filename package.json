{
	"name": "@application-platform/source",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"nx": "nx",
		"start": "nx run homepage:serve",
		"serve": "nx run-many -t serve --projects=homepage,demo --parallel=2",
		"serve:homepage": "nx run homepage:serve",
		"serve:demo": "nx run demo:serve",
		"build": "nx run-many -t build --all",
		"build:homepage": "nx run homepage:build",
		"build:demo": "nx run demo:build",
		"lint": "nx run-many -t lint --all",
		"lint:fix": "nx run-many -t lint --all --fix",
		"test": "nx run-many -t test --all --skip-nx-cache",
		"e2e": "nx run-many -t e2e --all",
		"format": "prettier --config .prettierrc --log-level warn \"**/*.{ts,js,json,scss,html,mjs}\" --ignore-path .gitignore",
		"format:check": "npm run format -- --check",
		"format:fix": "npm run format -- --write",
		"graph": "nx graph",
		"dep-graph": "nx dep-graph",
		"reset": "nx reset",
		"clean": "npm run reset && rimraf dist coverage tmp .angular",
		"update": "nx migrate latest",
		"help": "nx help",
		"prepare": "husky",
		"watch:shared-styles": "node scripts/watch-css.js",
		"serve:watch": "concurrently \"nx run start\" \"nx run shared-ui-theme:watch-css\"",
		"countlines": "cloc . --exclude-dir=.angular,.husky,.idea,.nx,.vscode,dist,node_modules,tmp,coverage --exclude-list-file=package-lock.json",
		"foss": "license-checker --json --production --customPath licenseFormat.json --out tmp/foss-licenses.json && node ./scripts/combine-licenses.js"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "21.0.8",
		"@angular/cdk": "21.0.6",
		"@angular/common": "21.0.8",
		"@angular/compiler": "21.0.8",
		"@angular/core": "21.0.8",
		"@angular/forms": "21.0.8",
		"@angular/platform-browser": "21.0.8",
		"@angular/platform-browser-dynamic": "21.0.8",
		"@angular/router": "21.0.8",
		"@jsverse/transloco": "^7.5.0",
		"@nx/angular": "22.3.3",
		"@push-based/ngx-fast-svg": "^18.1.0",
		"axios": "^1.6.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"organize-imports-cli": "^0.10.0",
		"rxjs": "~7.8.1",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "^2.2.1",
		"@angular-devkit/build-angular": "21.0.5",
		"@angular-devkit/core": "21.0.5",
		"@angular-devkit/schematics": "21.0.5",
		"@angular-eslint/eslint-plugin": "21.0.1",
		"@angular-eslint/eslint-plugin-template": "21.0.1",
		"@angular-eslint/schematics": "21.0.1",
		"@angular-eslint/template-parser": "21.0.1",
		"@angular/build": "21.0.5",
		"@angular/cli": "21.0.5",
		"@angular/compiler-cli": "21.0.8",
		"@angular/language-service": "21.0.8",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.15.0",
		"@nx/devkit": "22.3.3",
		"@nx/esbuild": "22.3.3",
		"@nx/eslint": "22.3.3",
		"@nx/eslint-plugin": "22.3.3",
		"@nx/js": "22.3.3",
		"@nx/node": "22.3.3",
		"@nx/playwright": "22.3.3",
		"@nx/vite": "22.3.3",
		"@nx/vitest": "22.3.3",
		"@nx/web": "22.3.3",
		"@nx/workspace": "22.3.3",
		"@playwright/test": "^1.36.0",
		"@prettier/plugin-php": "^0.22.2",
		"@swc-node/register": "1.9.2",
		"@swc/core": "1.5.7",
		"@swc/helpers": "0.5.17",
		"@types/node": "20.19.9",
		"@typescript-eslint/eslint-plugin": "8.43.0",
		"@typescript-eslint/parser": "8.43.0",
		"@typescript-eslint/utils": "8.43.0",
		"@vitest/coverage-v8": "^4.0.16",
		"angular-eslint": "21.0.1",
		"concurrently": "^9.1.0",
		"esbuild": "0.25.0",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-cypress": "^4.1.0",
		"eslint-plugin-jsdoc": "^50.5.0",
		"eslint-plugin-playwright": "^1.6.2",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"jsonc-eslint-parser": "^2.1.0",
		"license-checker": "^25.0.1",
		"lint-staged": "^15.2.10",
		"nx": "22.3.3",
		"nx-stylelint": "^18.0.0",
		"prettier": "~3.6.2",
		"rimraf": "^6.1.2",
		"sass": "^1.81.0",
		"sass-migrator": "^2.2.1",
		"shx": "^0.3.4",
		"stylelint": "^16.10.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"ts-node": "10.9.2",
		"typescript": "5.9.2",
		"typescript-eslint": "8.43.0",
		"vite": "^7.0.0",
		"vite-plugin-angular": "^0.0.0",
		"vite-tsconfig-paths": "^6.0.4",
		"vitest": "^4.0.8"
	},
	"lint-staged": {
		"*.{css,scss}": [
			"stylelint --fix",
			"prettier --config .prettierrc --write"
		],
		"*.{js,jsx,ts}": [
			"organize-imports-cli",
			"node scripts/sort-exports.js",
			"eslint --fix",
			"prettier --config .prettierrc --write"
		],
		"*.{md,json,html,php}": [
			"prettier --config .prettierrc --write"
		]
	}
}
